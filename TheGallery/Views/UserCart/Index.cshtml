@model IEnumerable<TheGallery.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Product.ImageURL)</th>
            <th>@Html.DisplayNameFor(model => model.Product.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Cart != null)
        {
            @foreach (var item in ViewBag.Cart)
            {
                <tr>
                    <th>@item.Product.Name</th>
                    <th>
                        @{
                            var imgURL = item.Product.ImageURL;
                        }
                        <img src="@imgURL" height="42" width="42">
                    </th>
                    <th>@item.Product.Price</th>
                    <th>@item.Quantity</th>
                    <td><a asp-action="RemoveFromCart" asp-route-id="@item.Product.Id">Remove From Cart</a></td>
                </tr>
            }
        }
    </tbody>
</table>
@if (ViewBag.total != null)
{
    <form asp-action="Purchase">
        <p>
            <input type="submit" value="Purchase: @ViewBag.total Kr" />
        </p>
    </form>
}
